<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.maveric.craigslistdiffchecker.ui.CraigsDiff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textTitle"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:text="Automatic Craigslist checker!" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnStartService"
        android:layout_below="@id/textTitle"
        android:text="Start service"
        android:textSize="20dp"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnStopService"
        android:layout_below="@+id/btnStartService"
        android:text="Stop service"
        android:textSize="20dp"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Manage Searches"
        android:id="@+id/btnManageSearches"
        android:layout_below="@+id/btnStopService"
        android:layout_centerHorizontal="true"
        android:textSize="20dp" />


    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="4.0dip"
        android:paddingTop="5.0dip"
        android:paddingRight="4.0dip"
        android:paddingBottom="1.0dip"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:layout_below="@+id/btnManageSearches">

        <TextView
            android:id="@+id/textViewServiceStatusLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:textAlignment="viewEnd"
            android:textSize="25sp"
            android:text="Service:  " />

        <TextView
            android:id="@+id/textViewServiceStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:textSize="25sp"
            android:text="null" />

    </LinearLayout>

</RelativeLayout>
